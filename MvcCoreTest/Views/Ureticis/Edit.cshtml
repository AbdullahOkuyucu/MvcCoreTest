@model UreticiModel

@{
    ViewData["Title"] = "Üretici Düzenle";
}

<h1>@ViewData["Title"]</h1>

<h4>Üretici</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirmaAdi" class="control-label"></label>
                <input asp-for="FirmaAdi" class="form-control" />
                <span asp-validation-for="FirmaAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirmaLokasyon" class="control-label"></label>
                <input asp-for="FirmaLokasyon" class="form-control" />
                <span asp-validation-for="FirmaLokasyon" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UretimDurumu" /> @Html.DisplayNameFor(model => model.UretimDurumu)
                </label>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

